<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
     <TextView
        android:id="@+id/headingtxt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menutopbarbg"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/headingtxt_textcolor"
        android:textSize="@dimen/headingtxt_textsize"
        android:textStyle="bold" />
    <ScrollView
        android:id="@+id/readyrecscroll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical" >
			<LinearLayout
			    android:id="@+id/bainfomainlinear"
			    android:layout_width="match_parent"
			    android:layout_height="70dp"
			    android:background="@drawable/menu"
			    android:orientation="horizontal"
			    android:weightSum="2" >
	            <TextView
	                android:id="@+id/bainfotxt"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="15dp"
	                android:layout_weight="1.5"
	                android:text="@string/bainfotxt_text"
	                android:textColor="@color/rec_datatxt_textcolor"
	                android:textSize="@dimen/rec_datatxt_textsize" />
	            <ImageView
	                android:id="@+id/bainfoimg"
	                android:layout_width="0dp"
	                android:layout_height="35dp"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="600dp"
	                android:layout_weight="0.5"
	                android:longClickable="true"
	                android:src="@drawable/downarrow" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bainfosublinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:visibility="gone" >
	        </LinearLayout>
			<LinearLayout
                android:id="@+id/readyrecinfomainlinear"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/menu"
                android:orientation="horizontal"
                android:weightSum="2" >
	            <TextView
	                android:id="@+id/readyrecinfotxt"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="15dp"
	                android:layout_weight="1.5"
	                android:text="@string/readyrecinfotxt_text"
	                android:textColor="@color/rec_datatxt_textcolor"
	                android:textSize="@dimen/rec_datatxt_textsize" />
	            <ImageView
	                android:id="@+id/readyrecinfoimg"
	                android:layout_width="0dp"
	                android:layout_height="35dp"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="600dp"
	                android:layout_weight="0.5"
	                android:src="@drawable/downarrow" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/readyrecinfosublinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical"
                android:visibility="gone" >
	        </LinearLayout>
            <LinearLayout
                android:id="@+id/prevauditinfomainlinear"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/menu"
                android:orientation="horizontal"
                android:weightSum="2" >
	            <TextView
	                android:id="@+id/prevauditinfotxt"
	                android:layout_width="0dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="center_vertical"
	                android:layout_marginLeft="15dp"
	                android:layout_weight="1.5"
	                android:text="@string/prevauditinfotxt_text"
	                android:textColor="@color/rec_datatxt_textcolor"
	                android:textSize="@dimen/rec_datatxt_textsize" />
	            <ImageView 
	                android:id="@+id/prevauditinfoimg"
	                android:layout_width="0dp"
	                android:layout_height="35dp"
	                android:layout_weight="0.5"
	                android:layout_marginLeft="600dp"
	                android:layout_gravity="center_vertical"
	                android:src="@drawable/downarrow"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/prevauditinfosublinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:visibility="gone" >
	            <LinearLayout 
	                android:id="@+id/lastauditscoremainlinear" 
	                android:layout_width="match_parent" 
	                android:layout_height="70dp" 
	                android:background="@drawable/menu" 
	                android:orientation="horizontal" 
	                android:weightSum="2">
	                <TextView 
	                    android:id="@+id/lastauditscoretxt" 
	                    android:layout_width="0dp" 
	                    android:layout_height="wrap_content" 
	                    android:layout_gravity="center_vertical" 
	                    android:layout_marginLeft="15dp" 
	                    android:layout_weight="1.8" 
	                    android:text="@string/lastauditscoretxt_text" 
	                    android:textColor="@color/rec_datatxt_textcolor" 
	                    android:textSize="@dimen/rec_datatxt_textsize"/>
	                <ImageView 
	                    android:id="@+id/lastauditscoreimg"
	                    android:layout_width="0dp" 
	                    android:layout_height="35dp" 
	                    android:layout_gravity="center_vertical" 
	                    android:layout_weight="0.2" 
	                    android:layout_marginLeft="350dp"
	                    android:src="@drawable/downarrow"/>
	         	</LinearLayout>
	            <LinearLayout 
	                android:id="@+id/lastauditscoresublinear" 
	                android:layout_width="match_parent" 
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="25dp" 
	                android:layout_marginRight="25dp" 
	                android:orientation="vertical" 
	                android:visibility="gone">
		        </LinearLayout>
		        <LinearLayout 
	                android:id="@+id/auditsummarymainlinear" 
	                android:layout_width="match_parent" 
	                android:layout_height="70dp" 
	                android:background="@drawable/menu" 
	                android:orientation="horizontal" 
	                android:weightSum="2">
	                <TextView 
	                    android:id="@+id/auditsummarytxt" 
	                    android:layout_width="0dp" 
	                    android:layout_height="wrap_content" 
	                    android:layout_gravity="center_vertical" 
	                    android:layout_marginLeft="15dp" 
	                    android:layout_weight="1.8" 
	                    android:text="@string/auditsummarytxt_text" 
	                    android:textColor="@color/rec_datatxt_textcolor" 
	                    android:textSize="@dimen/rec_datatxt_textsize"/>
	                <ImageView 
	                    android:id="@+id/auditsummaryimg"
	                    android:layout_width="0dp" 
	                    android:layout_height="35dp" 
	                    android:layout_gravity="center_vertical" 
	                    android:layout_weight="0.2" 
	                    android:layout_marginLeft="350dp"
	                    android:src="@drawable/downarrow"/>
	         	</LinearLayout>
	            <LinearLayout 
	                android:id="@+id/auditsummarysublinear" 
	                android:layout_width="match_parent" 
	                android:layout_height="wrap_content" 
	                android:layout_marginLeft="25dp" 
	                android:layout_marginRight="25dp" 
	                android:orientation="vertical" 
	                android:visibility="gone">
		        </LinearLayout>
		     </LinearLayout>
		  </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/footerbg"
        android:layout_alignParentBottom="true" >
        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/backbtn"
            android:text="" />
    </RelativeLayout>
</RelativeLayout>
