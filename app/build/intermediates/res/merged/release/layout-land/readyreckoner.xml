<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutbg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/headingtxt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/menutopbarbg"
        android:gravity="center"
        android:textStyle="bold"
        android:text="@string/readyrec_headingtxt_text"
        android:textColor="@color/headingtxt_textcolor"
        android:textSize="@dimen/headingtxt_textsize" />
    <LinearLayout
        android:id="@+id/readyreclinear"
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/subbg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <EditText
            android:id="@+id/readyrecactxt"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5"
            android:background="@drawable/basearchactxt"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:paddingRight="15dp"
            android:textColorHint="@color/basearchedttxt_textcolor"
            android:textColor="@color/basearchedttxt_textcolor"
            android:textSize="@dimen/basearchedttxt_textsize"
            android:hint="@string/readyrecedttxt_hinttext" >
            <requestFocus />
        </EditText>
        <Button
            android:id="@+id/lookupbtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/lookupbtn"
            android:textColor="@color/lookupbtn_textcolor"
            android:text="@string/lookupbtn_text"
            android:textSize="@dimen/lookupbtn_textsize" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/footerbg"
        android:layout_alignParentBottom="true" >
        <Button
            android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/backbtn"
            android:text="" />
    </RelativeLayout>
     <RelativeLayout
         android:id="@+id/basignrelative"
         android:layout_width="500dp"
         android:layout_height="400dp"
         android:layout_centerInParent="true"
         android:background="@drawable/basignrelative"
         android:visibility="invisible" >
        <TextView
            android:id="@+id/baimgcaptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:text="@string/baimgcaptxt_text"
            android:textColor="@color/baimgcaptxt_textcolor"
            android:textSize="@dimen/baimgcaptxt_textsize" />
          <Button
              android:id="@+id/imgcapbtn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignRight="@+id/baimgcaptxt"
              android:layout_alignTop="@+id/capimg"
              android:layout_marginTop="20dp"
              android:background="@drawable/imgcapbtn" />
          <Button
              android:id="@+id/baokbtn"
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:layout_alignLeft="@+id/imgcapbtn"
              android:layout_alignTop="@+id/bacancelbtn"
              android:text="@string/baokbtn_text"
              android:textSize="@dimen/baokbtntxt_textsize" />
          <ImageView
              android:id="@+id/capimg"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_below="@+id/baimgcaptxt"
              android:layout_marginLeft="74dp"
              android:layout_marginTop="32dp"
              android:layout_toRightOf="@+id/baokbtn"
              android:src="@drawable/capimg" />
          <Button
              android:id="@+id/bacancelbtn"
              android:layout_width="120dp"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_marginBottom="72dp"
              android:layout_marginLeft="18dp"
              android:layout_toRightOf="@+id/baokbtn"
              android:text="@string/bacancelbtn_text"
              android:textSize="@dimen/bacancelbtntxt_textsize" />
    </RelativeLayout>
</RelativeLayout>
